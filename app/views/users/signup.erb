<h1>Sign Up Below:</h1>

<%= @error %>

<form action="/signup" method="POST">
  <p>Name: <input type="text" name="user[name]" required></p>
  <p>Username: <input type="text" name="user[username]" required></p>
  <p>Email: <input type="email" name="user[email]" required></p>
  <p>Password: <input type="password" name="user[password]" required></p>
  <input type="submit" value="Sign Up">
</form> 

